<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RichEditText">
        <attr name="type" format="string">
            <enum name="phone" value="0" />
            <enum name="idCard" value="1" />
            <enum name="none" value="2" />
        </attr>
        <attr name="separator" format="string">
            <enum name="space" value="0" />
            <enum name="hyphen" value="1" />
            <enum name="bias" value="2" />
        </attr>
        <attr name="splitStyle" format="integer" />

    </declare-styleable>

    <declare-styleable name="ClearEditText">
        <attr name="clear" format="boolean" />
        <attr name="clear_icon" format="reference" />
        <attr name="clear_icon_up" format="reference" />
        <attr name="clear_icon_down" format="reference" />
    </declare-styleable>

</resources>